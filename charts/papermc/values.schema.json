{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PaperMC Values",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Image repository"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "description": "Image pull policy"
        },
        "tag": {
          "type": "string",
          "description": "Overrides the image tag whose default is the chart appVersion"
        }
      },
      "required": ["repository", "pullPolicy"]
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "description": "Image pull secrets"
    },
    "nameOverride": {
      "type": "string",
      "description": "Override the name of the chart"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the fullname of the chart"
    },
    "ports": {
      "type": "object",
      "properties": {
        "minecraft": {
          "type": "object",
          "properties": {
            "tcp": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Minecraft TCP port"
            },
            "udp": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Minecraft UDP port"
            }
          },
          "required": ["tcp", "udp"]
        },
        "extra": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "port": {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              "protocol": {
                "type": "string",
                "enum": ["TCP", "UDP"]
              }
            },
            "required": ["name", "port", "protocol"]
          },
          "description": "Additional ports for plugins"
        }
      },
      "required": ["minecraft", "extra"]
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "description": "Service type"
        },
        "annotations": {
          "type": "object",
          "description": "Service annotations"
        }
      },
      "required": ["type"]
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable ingress"
        },
        "spec": {
          "type": "object",
          "description": "Full Ingress spec (excluding metadata)"
        }
      },
      "required": ["enabled"]
    },
    "httpRoute": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable HTTPRoute (Gateway API)"
        },
        "spec": {
          "type": "object",
          "description": "Full HTTPRoute spec (excluding metadata)"
        }
      },
      "required": ["enabled"]
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable persistence"
        },
        "storageClassName": {
          "type": "string",
          "description": "Storage class name"
        },
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadWriteMany", "ReadOnlyMany"],
          "description": "PVC access mode"
        },
        "size": {
          "type": "string",
          "pattern": "^[0-9]+(Gi|Mi|Ti)$",
          "description": "PVC size"
        },
        "existingClaim": {
          "type": "string",
          "description": "Use existing PVC"
        }
      },
      "required": ["enabled", "accessMode", "size"]
    },
    "resources": {
      "type": "object",
      "description": "Resource limits and requests"
    },
    "livenessProbe": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      },
      "required": ["enabled"]
    },
    "readinessProbe": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      },
      "required": ["enabled"]
    },
    "nodeSelector": {
      "type": "object",
      "description": "Node selector"
    },
    "tolerations": {
      "type": "array",
      "description": "Tolerations"
    },
    "affinity": {
      "type": "object",
      "description": "Affinity"
    },
    "podAnnotations": {
      "type": "object",
      "description": "Pod annotations"
    },
    "podLabels": {
      "type": "object",
      "description": "Pod labels"
    },
    "podSecurityContext": {
      "type": "object",
      "description": "Pod security context"
    },
    "securityContext": {
      "type": "object",
      "description": "Container security context"
    },
    "updateStrategy": {
      "type": "object",
      "description": "Update strategy"
    }
  },
  "required": ["image", "ports", "service", "ingress", "httpRoute", "persistence", "resources"]
}
