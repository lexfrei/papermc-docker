{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PaperMC Values",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Image repository"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "description": "Image pull policy"
        },
        "tag": {
          "type": "string",
          "description": "Overrides the image tag whose default is the chart appVersion"
        }
      },
      "required": ["repository", "pullPolicy"]
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "description": "Image pull secrets"
    },
    "nameOverride": {
      "type": "string",
      "description": "Override the name of the chart"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the fullname of the chart"
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "description": "Service type"
        },
        "annotations": {
          "type": "object",
          "description": "Service annotations"
        },
        "minecraftTCPPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Minecraft TCP port"
        },
        "minecraftUDPPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Minecraft UDP port"
        },
        "extraPorts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "port": {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              "protocol": {
                "type": "string",
                "enum": ["TCP", "UDP"]
              }
            },
            "required": ["name", "port", "protocol"]
          },
          "description": "Additional service ports for plugins"
        }
      },
      "required": ["type", "minecraftTCPPort", "minecraftUDPPort"]
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable ingress"
        },
        "className": {
          "type": "string",
          "description": "Ingress class name"
        },
        "annotations": {
          "type": "object",
          "description": "Ingress annotations"
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "description": "Ingress hosts"
        },
        "tls": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "description": "Ingress TLS configuration"
        }
      },
      "required": ["enabled"]
    },
    "httpRoute": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable HTTPRoute (Gateway API)"
        },
        "parentRefs": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "description": "Parent gateway references"
        },
        "hostnames": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "HTTPRoute hostnames"
        },
        "backendPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Backend service port"
        }
      },
      "required": ["enabled"]
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable persistence"
        },
        "storageClassName": {
          "type": "string",
          "description": "Storage class name"
        },
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadWriteMany", "ReadOnlyMany"],
          "description": "PVC access mode"
        },
        "size": {
          "type": "string",
          "pattern": "^[0-9]+(Gi|Mi|Ti)$",
          "description": "PVC size"
        },
        "existingClaim": {
          "type": "string",
          "description": "Use existing PVC"
        }
      },
      "required": ["enabled", "accessMode", "size"]
    },
    "resources": {
      "type": "object",
      "description": "Resource limits and requests"
    },
    "livenessProbe": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      },
      "required": ["enabled"]
    },
    "readinessProbe": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      },
      "required": ["enabled"]
    },
    "nodeSelector": {
      "type": "object",
      "description": "Node selector"
    },
    "tolerations": {
      "type": "array",
      "description": "Tolerations"
    },
    "affinity": {
      "type": "object",
      "description": "Affinity"
    },
    "podAnnotations": {
      "type": "object",
      "description": "Pod annotations"
    },
    "podLabels": {
      "type": "object",
      "description": "Pod labels"
    },
    "podSecurityContext": {
      "type": "object",
      "description": "Pod security context"
    },
    "securityContext": {
      "type": "object",
      "description": "Container security context"
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Create service account"
        },
        "annotations": {
          "type": "object",
          "description": "Service account annotations"
        },
        "name": {
          "type": "string",
          "description": "Service account name"
        }
      },
      "required": ["create"]
    },
    "updateStrategy": {
      "type": "object",
      "description": "Update strategy"
    }
  },
  "required": ["image", "service", "ingress", "httpRoute", "persistence", "resources"]
}
